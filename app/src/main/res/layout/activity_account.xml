<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Account"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profiloTv"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="40dp"
        android:text="Il mio account"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profiloImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_account_circle_black_24dp"

        />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@id/profiloTv"
        app:layout_constraintTop_toBottomOf="@id/profiloTv" />


    <TextView
        android:id="@+id/logoutTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="56dp"
        android:text="Logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#0000FF"
        app:layout_constraintLeft_toLeftOf="@id/profiloImage"
        app:layout_constraintTop_toBottomOf="@id/profiloImage" />
</android.support.constraint.ConstraintLayout>